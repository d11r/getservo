{
  "name": "servo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "dev:web": "turbo run dev --filter=@servo/web",
    "dev:mcp": "turbo run dev --filter=@servo/mcp-server",
    "build:web": "turbo run build --filter=@servo/web",
    "build:mcp": "turbo run build --filter=@servo/mcp-server",
    "build:mcp:sea": "pnpm --filter @servo/mcp-server build:sea",
    "build:mcp:app": "pnpm --filter @servo/mcp-server build:app"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}
