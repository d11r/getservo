{
  "name": "servo-mcp",
  "version": "0.4.0",
  "description": "Desktop MCP server for AI agents - screenshots, clicks, typing, accessibility, and more on macOS and Windows",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "servo-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "desktop-automation",
    "screenshot",
    "macos",
    "windows",
    "ai-agent",
    "automation",
    "screen-control",
    "accessibility",
    "ui-automation"
  ],
  "author": "Dragos Strugar <contact@dragosstrugar.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d11r/servo-mcp.git"
  },
  "homepage": "https://servo-mcp.com",
  "bugs": {
    "url": "https://github.com/d11r/servo-mcp/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm build:native && pnpm build:js",
    "build:js": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --banner:js=\"#!/usr/bin/env node\"",
    "build:native": "node scripts/build-native.js",
    "build:native:macos": "cd native/macos && swiftc -O -o ../../bin/servo-helper-darwin-arm64 Sources/main.swift -framework Cocoa -framework CoreGraphics -framework ApplicationServices",
    "dev": "node --import tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
